@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
<h4>Add a New Stylist</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone)<br>

    @Html.LabelFor(model => model.Specialties)
    @Html.TextBoxFor(model => model.Specialties)<br>

    <input type="submit" value="Add Sylist"/>
}

<p>@Html.ActionLink("Show All Sylists", "Index")</p>