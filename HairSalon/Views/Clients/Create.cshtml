@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<h4>Add a New Client</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.FirstName)
    @Html.TextBoxFor(model => model.FirstName)<br>

    @Html.LabelFor(model => model.LastName)
    @Html.TextBoxFor(model => model.LastName)<br>

    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone)<br>

    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")<br>
    <input type="submit" value="Add Client" class="btn btn-default"/> 
}

<p>@Html.ActionLink("Show all clients", "Index")</p>