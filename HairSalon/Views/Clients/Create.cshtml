@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<h4>Add a New Client for @ViewBag.Stylist.Name</h4>

@using (Html.BeginForm())
{
    <input data-val="true" data-val-required="The StylistId field is required." id="StylistId" name="StylistId" type="hidden" value="@ViewBag.Stylist.StylistId">

    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone)<br>

    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes)<br>

    <input type="submit" value="Add Client" class="btn btn-default"/> 
}

<p>@Html.ActionLink("Cancel", "Details", "Stylists", new { id = @ViewBag.Stylist.StylistId })</p>